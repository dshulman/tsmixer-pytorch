    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                        "--seed", "42",
                        "--data", "./data/weather.csv",
                        "--feature_type", "M",
                        //"--target", "OT", only for feature_type S or MS
                        //"--checkpoint_dir", "./checkpoints",
                        //"--name", "exp",
                        "--seq_len", "512",
                        "--pred_len", "96",
                        "--learning_rate", "0.0001",
                        "--n_block", "4",
                        "--dropout", "0.3",
                        "--ff_dim", "32",
                        "--norm_type", "B",
                        "--activation", "relu",
                        "--train_epochs", "1",
                        "--batch_size", "32",
                        "--patience", "5",
                        "--result_path", "result.csv"
                ]
        }
    ]
}
